/var/log/wg_monitor.log {
    size 1M
    rotate 7
    compress
    delaycompress
    missingok
    notifempty
    postrotate
        systemctl reload wg-monitor 2>/dev/null || true
        for svc in $(systemctl list-units --plain --no-legend 'wg-monitor@*' | awk '{print $1}'); do
            systemctl reload "$svc" 2>/dev/null || true
        done
    endscript
}
